<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".Manual_Update">

    <Button
        android:id="@+id/button"
        android:layout_width="103dp"
        android:layout_height="49dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="652dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/google_sans"
        android:onClick="saveQuote"
        android:text="@string/save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="103dp"
        android:layout_height="49dp"
        android:layout_marginStart="267dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="652dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/google_sans"
        android:onClick="fetchQuote"
        android:text="@string/fetch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.824"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />

    <TextView
        android:id="@+id/textViewInspiring"
        android:layout_width="239dp"
        android:layout_height="198dp"
        android:fontFamily="@font/google_sans"
        android:hint="Fetched Data Will Be Displayed Here"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="@color/common_google_signin_btn_text_dark_pressed"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868" />

    <EditText
        android:id="@+id/editEquipID"
        android:layout_width="259dp"
        android:layout_height="43dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/roundedback"
        android:cursorVisible="false"
        android:ems="10"
        android:hint="Enter Equipment ID Here!"
        android:inputType="numberSigned"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/editEquipName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.829" />

    <EditText
        android:id="@+id/editEquipName"
        android:layout_width="259dp"
        android:layout_height="43dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/roundedback"
        android:cursorVisible="false"
        android:ems="10"
        android:hint="Enter Equipment Name Here!"
        android:inputType="text"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/editEquipService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.862" />

    <EditText
        android:id="@+id/editEquipService"
        android:layout_width="259dp"
        android:layout_height="43dp"
        android:layout_marginStart="76dp"
        android:layout_marginEnd="76dp"
        android:background="@drawable/roundedback"
        android:cursorVisible="false"
        android:ems="10"
        android:hint="Enter Equipment Last Service"
        android:inputType="date"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textViewInspiring"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.883" />

</androidx.constraintlayout.widget.ConstraintLayout>


